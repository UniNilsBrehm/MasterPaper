  journal = {Functional Ecology},
  author = {Lewanzik, Daniel and Goerlitz, Holger R},
  year = {2018},
  keywords = {acoustic and functional ecology,group,max,planck institute for ornithology,seewiesen},
  pages = {1-11}
}

@article{brette2015,
