@article{surlykke1984,
  title = {Hearing in {{Notodontid Moths}}: A {{Tympanic Organ}} with a {{Single Auditory Neurone}}},
  volume = {113},
  issn = {0022-0949},
  abstract = {1. Notodontid moths possess paired tympanic organs basically similar to the ears in other noctuoid families, but with a single auditory A cell. The A cell and the non-auditory B cell were studied anatomically by infusion of C0CI2 and physiologically by recordings from the tympanic nerve. 2. The response of the A cell is determined by intensity parameters and temporal parameters of an ultrasonic stimulus. The notodontid ear is as sensitive as the ears of sympatric noctuids. The directional sensitivity is approximately the same as in noctuids of comparable size (maximal interaural intensity difference of 10\textendash{}15 dB). The dynamic range of the A cell is about 20\textendash{}25 dB. Sound levels exceeding the threshold by 30\textendash{}40 dB will saturate the A cells in both ears. Stimuli with different pulse lengths (from 5 to 200 ms, corresponding to pulse repetition rates (PRR) from 100-2.5 Hz), but equal duty cycles (50\%) gave a maximum response for pulse lengths lying between 30 and 50 ms. The receptor cell followed the sound pulses in a one-to-one manner even at a PRR of 200 Hz. 3. Notodontid moths seem to show the same `bimodal' evasive behaviour as noctuids. This behaviour can be explained on the basis of intensity parameters, since only low intensity stimuli will give the notodontid directional information. Hence, directional evasive behaviour is expected at low sound pressure levels (SPL), while high SPL (saturating both A cells) should elicit a non-directional evasive behaviour. However, the evasive behaviour could also be explained in terms of time parameters. Hunting bats increase the PRR of their cries when closing in on a prey and the moths may be able to use these time cues for changing their behaviour.},
  number = {1},
  journal = {Journal of Experimental Biology},
  author = {Surlykke, Annemarie},
  year = {1984},
  pages = {323-335}
}

@article{surlykke2003,
  title = {Hearing in Hooktip Moths ({{Drepanidae}}: {{Lepidoptera}}).},
  volume = {206},
  issn = {0022-0949},
  doi = {10.1242/jeb.00469},
  abstract = {This study presents anatomical and physiological evidence for a sense of hearing in hooktip moths (Drepanoidea). Two example species, Drepana arcuata and Watsonalla uncinula, were examined. The abdominal ears of drepanids are structurally unique compared to those of other Lepidoptera and other insects, by having an internal tympanal membrane, and auditory sensilla embedded within the membrane. The tympanum is formed by two thin tracheal walls that stretch across a teardrop-shaped opening between dorsal and ventral air chambers in the first abdominal segment. There are four sensory organs (scolopidia) embedded separately between the tympanal membrane layers: two larger lateral scolopidia within the tympanal area, and two smaller scolopidia at the medial margin of the tympanal frame. Sound is thought to reach the tympanal membrane through two external membranes that connect indirectly to the dorsal chamber. The ear is tuned to ultrasonic frequencies between 30 and 65 kHz, with a best threshold of around 52 dB SPL at 40 kHz, and no apparent difference between genders. Thus, drepanid hearing resembles that of other moths, indicating that the main function is bat detection. Two sensory cells are excited by sound stimuli. Those two cells differ in threshold by approximately 19 dB. The morphology of the ear suggests that the two larger scolopidia function as auditory sensilla; the two smaller scolopidia, located near the tympanal frame, were not excited by sound. We present a biophysical model to explain the possible functional organization of this unique tympanal ear.},
  number = {Pt 15},
  journal = {The Journal of experimental biology},
  author = {Surlykke, Annemarie and Yack, Jayne E and Spence, Andrew J and Hasenfuss, Ivar},
  year = {2003},
  keywords = {moth,chordotonal organ,drepana arcuata,drepanidae,hearing physiology,lepidoptera,the tympanal membrane through,two external membranes,watsonalla uncinula},
  pages = {2653-2663}
}

@article{heller1994,
